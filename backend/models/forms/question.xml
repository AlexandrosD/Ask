<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset>
		<field name="id" type="hidden" />
		<field
			name="title"
			type="text"
			label="Title"
			description="Fill in the title"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="text"
			type="textarea"
			label="text"
			description="Fill in the title"
			rows="10"
			class="inputbox"
			default=""
		/>
		<field
			name="submitted"
			type="calendar"
			label="Submission Date"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
		/>
		<field name="userid_creator" 
			type="user"
			label="Submitted By" 
			description="Submitted By" 
		/>
		<field
			name="modified"
			type="calendar"
			label="Last Modification"
			class="readonly"
			readonly="true"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
		/>
		<field name="userid_modifier" type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			
		 />
		<field
			name="question"
			type="list"
			label="Type"
			description="Type"
			class="readonly"
			readonly="true"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">
				Question</option>
			<option value="0">
				Answer</option>
		</field>
		<field
			name="votes_positive"
			type="hidden"
			default="0"
		/>
		<field
			name="votes_negative"
			type="hidden"
			default="0"
		/>
		<field
			name="parent"
			label="Parent Question"
			class="readonly"
			readonly="true"
		/>
		<field
			name="impressions"
			type="hidden"
		/>
		
		<field
			name="published"
			type="list"
			label="JGLOBAL_STATE"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>
		
		<field
			name="chosen"
			type="hidden"
		/>
	</fieldset>
</form>
