<?xml version="1.0" encoding="utf-8"?>
<metadata>
        <layout title="MENU_QUESTIONS">
                <message>MENU_QUESTIONS</message>
        </layout>
        <fields name="request">
			<fieldset name="request">

				<!-- CATEGORY VIEW -->
				<field name="catid" 
					type="category"
					extension="com_ask"
					label="CATEGORY"
					class="inputbox"
				>
			 		<option value="0">JOPTION_SELECT_CATEGORY</option>
				</field>
				
				<!-- TAG VIEW -->
				<field name="tag" 
					type="text"
					extension="com_ask"
					label="TAG"
					class="inputbox"
				/>
				
				<!-- FILTERS -->
				<field name="filter" 
					type="list"
					label="FILTER"
					class="inputbox"
				>
			 		<option value="0">FILTER_NONE</option>
			 		<option value="answered">FILTER_ANSWERED</option>
			 		<option value="notanswered">FILTER_NOTANSWERED</option>
			 		<option value="resolved">FILTER_RESOLVED</option>
			 		<option value="unresolved">FILTER_UNRESOLVED</option>
			 		<option value="myquestions">FILTER_MYQUESTIONS</option>
				</field>
				
				<!-- ORDERING -->
				<field name="list_ordering" 
					type="list"
					label="ORDER_BY"
					class="inputbox"
				>
			 		<option value="submitted">ORDER_SUBMITTED</option>
			 		<option value="votes">ORDER_VOTES</option>
			 		<option value="score">ORDER_SCORE</option>
			 		<option value="impressions">ORDER_VIEWS</option>
			 		<option value="answerscount">ORDER_ANSWERS</option>
				</field>
				
				<!-- ORDERING DIRECTION -->
				<field name="list_direction" 
					type="list"
					label="ORDER_DIRECTION"
					class="inputbox"
				>
			 		<option value="DESC">ORDER_DESC</option>
			 		<option value="ASC">ORDER_ASC</option>
				</field>
				
				<!-- DISPLAY STATS -->
				<field name="display_stats"
					type="list"
					label="DISPLAY_STATS"
					class="inputbox"
				>
					<option value="1">OPT_YES</option>
					<option value="0">OPT_NO</option>
				</field>
				
				<!-- DISPLAY FILTERS -->
				<field name="display_filters"
					type="list"
					label="DISPLAY_FILTERS"
					class="inputbox"
				>
					<option value="1">OPT_YES</option>
					<option value="0">OPT_NO</option>
				</field>
				
				<!-- DISPLAY GRAVATARS -->
				<field name="display_gravatars"
					type="list"
					label="DISPLAY_GRAVATARS"
					class="inputbox"
				>
					<option value="1">OPT_YES</option>
					<option value="0">OPT_NO</option>
				</field>
				
			</fieldset>
		</fields>
</metadata>